{
	"name": "wikimedia/mediawiki-config",
	"description": "MediaWiki configuration for the Wikimedia farm",
	"require": {
		"mongofill/mongofill": "dev-master",
		"perftools/xhgui-collector": "1.5.0"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "1.0.0",
		"mediawiki/mediawiki-codesniffer": "18.0.0",
		"phpunit/phpunit": "4.8.36 || ^6.5",
		"mediawiki/minus-x": "0.3.2"
	},
	"scripts": {
		"lint": "parallel-lint --exclude vendor --exclude multiversion/vendor --ignore-fails .",
		"phpcs": "phpcs -p -s",
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"test": [
			"composer lint",
			"phpunit",
			"composer phpcs",
			"minus-x check ."
		]
	},
	"config": {
		"classmap-authoritative": true,
		"optimize-autoloader": true,
		"prepend-autoloader": false,
		"vendor-dir": "vendor"
	}
}
